generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UsersAuthentication {
  password     String
  salt         String
  sessionToken String
}

model Users {
  id             String              @id @default(auto()) @map("_id") @db.ObjectId
  v              Int                 @map("__v")
  authentication UsersAuthentication
  email          String
  username       String
}
